<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10000000"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/device_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/device_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/device_ring"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/device_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/device_ring_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/device_switch_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/device_auto_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/device_notification_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/device_sensitive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/device_alarm_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/device_tack_pic_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/device_out_door_alarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/device_out_door_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/device_out_door_ring"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/device_alarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/device_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/device_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/device_version_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/device_firm_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/device_total_stroage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/device_use_stroage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
