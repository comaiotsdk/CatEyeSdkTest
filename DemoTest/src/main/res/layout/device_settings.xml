                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/device_doorbellLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/device_disturb_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/device_disturb_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/device_disturb_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/test_set_device_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="测试设置参数" />

            <Button
                android:id="@+id/share_device_to_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="分享设备" />

            <Button
                android:id="@+id/share_user_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="已分享用户列表" />

            <Button
                android:id="@+id/delete_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="删除设备" />

            <Button
                android:id="@+id/check_device_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="检查升级" />

            <Button
                android:id="@+id/device_disturb_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="免打扰设置" />

            <Button
                android:id="@+id/device_register_face"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="让猫眼进入录入人脸模式" />


